<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="educandario-master" transaction-type="RESOURCE_LOCAL">
		<class>br.gov.sc.geracaotec.educandario.modelos.Aluno</class>
		<class>br.gov.sc.geracaotec.educandario.modelos.Atendimento</class>
		<class>br.gov.sc.geracaotec.educandario.modelos.Funcionario</class>
		<class>br.gov.sc.geracaotec.educandario.modelos.Setor</class>
		<class>br.gov.sc.geracaotec.educandario.util.LocalDatePersistenceConverter</class>
		<class>br.gov.sc.geracaotec.educandario.modelos.Familiar</class>
		<class>br.gov.sc.geracaotec.educandario.modelos.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="123456"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/educandario"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
